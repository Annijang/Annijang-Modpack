{
  "name": "攀岩",
  "description": "体型小瞧灵活，可以很轻松地爬上方块。",
  "type": "origins:multiple",
  "toggle": {
    "type": "origins:toggle",
    "key": {
      "key": "key.origins.secondary_active",
      "continuous": false
    }
  },
  "climbing": {
    "type": "origins:climbing",
    "hold_condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:or",
          "conditions": [
            {
              "type": "origins:block_collision",
              "offset_x": 0.01,
              "offset_z": 0.01,
              "offset_y": 0
            },
            {
              "type": "origins:block_collision",
              "offset_x": -0.01,
              "offset_z": -0.01,
              "offset_y": 0
            }
          ]
        },
        {
          "type": "origins:power_active",
          "power": "*:*_toggle"
        }
      ]
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:collided_horizontally"
        },
        {
          "type": "origins:power_active",
          "power": "*:*_toggle"
        }
      ]
    }
  }
}