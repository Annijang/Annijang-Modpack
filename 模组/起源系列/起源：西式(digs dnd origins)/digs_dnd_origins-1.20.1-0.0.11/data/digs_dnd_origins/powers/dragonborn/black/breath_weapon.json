{
    "name": "空气武器",
    "description": "你可以向前喷射出一排毒气，可让接触到的生物进入中毒状态，在你短暂休息或者长时间休息后，你可再次使用该能力。",
    "type": "origins:multiple",
    
    "spit": {
        "type": "origins:fire_projectile",
        "entity_type": "digs_dnd_origins:green_breath",
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "count": 10,
        "interval": 0,
        "start_delay": 0,
        "speed": 0.5,
        "divergence": 10.0,
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        },
        "condition": {
            "type": "origins:resource",
            "resource": "digs_dnd_origins:dragonborn/black/breath_weapon_breath",
            "comparison": ">",
            "compare_to": 1
        }
    },
    "breath": {
        "type": "origins:resource",
        "min": 0,
        "max": 80,
        "start_value": 80,
        "hud_render": {
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 8,
            "should_render": true
        }
    },
    "short_rest": {
        "type": "origins:action_over_time",
        "interval": 15,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "digs_dnd_origins:dragonborn/black/breath_weapon_breath",
            "change": 1
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:sprinting",
                    "inverted": true
                },
                {
                    "type": "origins:on_block"
                }
            ]
        }
    },
    "long_rest": {
        "type": "origins:action_on_wake_up",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "digs_dnd_origins:dragonborn/black/breath_weapon_breath",
            "change": 80,
            "operation": "set"
        }
    },
    "breath_out": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "digs_dnd_origins:dragonborn/black/breath_weapon_breath",
                "comparison": ">",
                "compare_to": 1
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "digs_dnd_origins:dragonborn/black/breath_weapon_breath",
                        "change": -1
                    },
                    {
                        "type": "origins:play_sound",
                        "sound": "minecraft:block.fire.extinguish",
                        "volume": 0.5,
                        "pitch": 1.5
                    },
                    {
                        "type": "origins:play_sound",
                        "sound": "minecraft:entity.horse.breathe",
                        "volume": 0.75,
                        "pitch": 1.125
                    }
                ]
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "digs_dnd_origins:dragonborn/black/breath_weapon_breath",
                "change": -1
            }
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        }
    },
    "damage": {
        "type": "origins:target_action_on_hit",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:damage",
                    "amount": 1,
                    "source": {
                        "name": "wither",
                        "magic": true,
                        "bypasses_armor": false
                    }
                },
                {
                    "type": "origins:apply_effect",
                    "effect": {
                        "effect": "minecraft:poison",
                        "duration": 140,
                        "amplifier": 0,
                        "show_particles": false
                    }
                }
            ]
        },
        "damage_condition": {
            "type": "origins:projectile",
            "projectile": "digs_dnd_origins:green_breath"
        }
    }
}